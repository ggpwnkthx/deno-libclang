{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:jsr.io)",
      "WebFetch(domain:deno.com)",
      "WebFetch(domain:docs.deno.com)",
      "WebFetch(domain:clang.llvm.org)",
      "WebFetch(domain:releases.llvm.org)",
      "mcp__ide__getDiagnostics",
      "Bash(deno:*)",
      "Bash(ls:*)",
      "Bash(clang:*)",
      "Bash(nm:*)",
      "Bash(ldconfig:*)",
      "Bash(clang-20:*)",
      "Bash(find:*)",
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "deno run -A .claude/hooks/fmt.ts"
          },
          {
            "type": "command",
            "command": "deno run -A .claude/hooks/lint.ts"
          },
          {
            "type": "command",
            "command": "deno run -A .claude/hooks/check.ts"
          }
        ]
      }
    ]
  }
}
